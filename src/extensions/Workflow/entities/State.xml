<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE entity SYSTEM
    "https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.dtd">
<entity name="Joomla\Extension\Workflow\Entity\State">

    <storage>
        <default table="states"/>
    </storage>

    <fields>
        <field
            name="id"
            type="id"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            default="null"
        >
            <validation rule="positive"/>
            <validation rule="integer"/>
        </field>

        <field
            name="title"
            type="title"
            label="JGLOBAL_TITLE"
        >
            <validation rule="maxlen" value="64"/>
        </field>
    </fields>

    <relations></relations>

</entity>
